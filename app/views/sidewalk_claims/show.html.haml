#actions_box
  #legend.gray_box.radius_4.font_14.center
    %h3
      = t("titles.drain_color")
    %ul.horizontal_items.font_bold
      %li.needs_help= t("captions.need_help")
      %li.cleared= t("captions.clean")
      %li.unclear=  t("captions.unclean")
      %li.unclear.link_1= link_to t("links.refresh", :id => 'refresh_link'), :target => '_blank'

  .descriptions
    %h4
      = t('defaults.address') + ':'
      = @sidewalk.address
      %span.font12
        = t("defaults.drain_number", :thing => t("defaults.thing").titleize)
        = @sidewalk.gid
    - if @claims.empty?
      %p.font_14.color_warn.center
        = t("defaults.notify")
    - else
      %h3{:style => "font-size:14px;"}
        = t('captions.taken') + ':'
      
      #people_list.users
      - if user_signed_in? && current_user.role == 2
        %table#abandon_link
          %tr
            %th 
              = t("defaults.user")
            %th 
              = t("defaults.status")
            %th 
              = t("defaults.actions")
          - @claims.each do |c|
            %tr
              %td= c.user.short_name
              %td 
                = t("buttons.clean")
              %td
                %button{:class => "btn btn-default", :style => "font-size:8px;", :data => {:moid=>c.id}}
                  = t("buttons.change")
      - else
        %table#abandon_link
          %tr
            %th 
              = t("defaults.user")
            %th
              = t("defaults.status")
          - @claims.each do |c|
            %tr
              %td= c.user.short_name
              %td 
                = t("buttons.clean")

  - if user_signed_in? && current_user.role == 2
    %div
      = current_user.street.id
      %a{:href => "#", :id => "unclean", :data => {:moid=>@sidewalk.gid}}
        = button_tag t("captions.unclean"), :class => "btn btn-warning cat-btn", :style => "padding-left:20px; padding-right: 20px;"
      %a{:href => "#", :id => "clean", :data => {:moid=>@sidewalk.gid}}
        = button_tag t("captions.clean"), :class => "btn btn-success cat-btn", :style => "padding-left:20px; padding-right: 20px;"
      - if @claims.empty?
        %button#assign.btn.info_adopt
          = t("buttons.adopt")
      - else
        %button#add_claim.btn.info_adopt
          = t("captions.add")
  - else
    - if @sidewalk.cleared?
      = button_tag t("captions.clean"), :class => "btn btn-success btn-block cat-btn"
    - else
      = button_tag t("captions.unclean"), :class => "btn btn-warning btn-block cat-btn"
