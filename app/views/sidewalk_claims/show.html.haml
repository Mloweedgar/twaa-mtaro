#actions_box
  #legend.gray_box.radius_4.font_14.center
    %h3
      = t("titles.drain_color")
    %ul.horizontal_items.font_bold
      %li.needs_help= t("captions.need_help")
      %li.cleared= t("captions.clean")
      %li.unclear=  t("captions.unclean")
      %li.unclear.link_1= link_to t("links.refresh", :id => 'refresh_link'), :target => '_blank'

  .descriptions
    %h3
      = t('defaults.address') + ':'
      = @sidewalk.address
      %span.font12
        = t("defaults.drain_number", :thing => t("defaults.thing").titleize)
        = @sidewalk.gid
    - if @claims.empty?
      %p.font_18.color_warn.center
        Nobody has adopted this sidewalk yet.
    - else
      %h3
        = t('captions.taken') + ':'
      #people_list.users{:style => "max-height:150px; width:400px;overflow:auto;"}
      - if user_signed_in? && current_user.role == 2
        %table#abandon_link
          %tr
            %th User name
            %th Status
            %th Action
          - @claims.each do |c|
            %tr
              %td= c.user.short_name
              %td clean
              %td
                %button{:class => "abdn_link", :data => {:moid=>c.id}, :style => "text-decoration:none;"}
                  change
      - else
        %table#abandon_lin
          %tr
            %th User name
            %th Status
          - @claims.each do |c|
            %tr
              %td= c.user.short_name
              %td clean



  - if user_signed_in? && current_user.role == 2
    %div
      = current_user.street.id
      %a{:href => "#", :id => "unclean", :data => {:moid=>@sidewalk.gid}, :style => "text-decoration:none;"}
        = button_tag t("captions.unclean"), :class => "btn btn-warning cat-btn"
      %a{:href => "#", :id => "clean", :data => {:moid=>@sidewalk.gid}, :style => "text-decoration:none;"}
        = button_tag t("captions.clean"), :class => "btn btn-success cat-btn"
      - if @claims.empty?
        %button#assign.btn.info_adopt
          = t("buttons.adopt")
      - else
        %button#add_claim.btn.info_adopt
          add
  - else
    - if @sidewalk.cleared?
      = button_tag t("captions.clean"), :class => "btn success"
    - else
      = button_tag t("captions.unclean"), :class => "btn warning"
