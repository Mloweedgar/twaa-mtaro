= form_for @need_help_category do |f|
  - if @need_help_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@need_help_category.errors.count, "error")} prohibited this need_help_category from being saved:"
      %ul
        - @need_help_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category_name
    = f.text_field :category_name
  .actions
    = f.submit 'Save'
