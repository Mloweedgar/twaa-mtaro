= form_for @ward do |f|
  - if @ward.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ward.errors.count, "error")} prohibited this ward from being saved:"
      %ul
        - @ward.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ward_name
    = f.text_field :ward_name
  .field
    = f.label :municipal
    = f.text_field :municipal
  .actions
    = f.submit 'Save'
